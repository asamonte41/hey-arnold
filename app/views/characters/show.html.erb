<% if @character.present? %>
  <h1><%= @character.name %></h1>
  <p><strong>Role:</strong> <%= @character.role %></p>
  <p><%= @character.description %></p>

  <% if @character.image_url.present? %>
    <%= image_tag @character.image_url, width: 200, class: "mb-3" %>
  <% end %>

  <hr>

  <h2>Episodes Appeared In</h2>
  <% if @episodes.present? %>
    <ul>
      <% @episodes.each do |e| %>
        <li><%= link_to e.title, episode_path(e) %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No episode data available.</p>
  <% end %>

  <hr>

  <h2>Quotes</h2>
  <% if @quotes.present? %>
    <ul>
      <% @quotes.each do |q| %>
        <li>"<%= q.text %>"</li>
      <% end %>
    </ul>
  <% else %>
    <p>No quotes available for this character.</p>
  <% end %>
<% else %>
  <p>Character not found.</p>
<% end %>
