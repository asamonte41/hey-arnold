<h1><%= @character.name.presence || "Unknown Character" %></h1>
<p><strong>Role:</strong> <%= @character.role.presence || "No role information" %></p>
<p><%= @character.description.presence || "No description available." %></p>

<% if @character.image_url.present? %>
  <%# If image URL is external, use it directly; otherwise, prepend folder path %>
  <% image_path = @character.image_url.start_with?("http") ? @character.image_url : "characters/#{@character.image_url}" %>
  <%= image_tag image_path, width: 200, class: "mb-3", alt: @character.name %>
<% else %>
  <%= image_tag "placeholder.png", width: 200, class: "mb-3", alt: "Placeholder" %>
<% end %>

<hr>
