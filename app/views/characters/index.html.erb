<div class="container mt-4">
  <h1 class="mb-4 text-center">All Characters</h1>

  <!-- Search Bar and Location Filter -->
  <div class="row mb-4">
    <div class="col-md-6">
      <%= form_with url: characters_path, method: :get, local: true do |f| %>
        <div class="input-group">
          <%= f.text_field :query, value: @query, class: "form-control", placeholder: "Search characters..." %>
          <button class="btn btn-primary" type="submit">Search</button>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= form_with url: characters_path, method: :get, local: true do %>
        <div class="input-group">
          <%= select_tag :location, options_for_select(["All Locations"] + Location.pluck(:name), @location_filter), class: "form-select" %>
          <button class="btn btn-secondary" type="submit">Filter</button>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Characters Grid -->
  <div class="row">
    <% if @characters.present? %>
      <% @characters.each do |c| %>
        <div class="col-6 col-md-4 col-lg-3 mb-4">
          <div class="card text-center h-100">
            <%# Determine image path with fallback for jpg/png %>
            <%
              base_name = c.image_url.present? ? c.image_url.sub(/\.(png|jpg)$/, '') : "placeholder"
              image_path = if Rails.application.assets.find_asset("characters/#{base_name}.png")
                             "characters/#{base_name}.png"
                           elsif Rails.application.assets.find_asset("characters/#{base_name}.jpg")
                             "characters/#{base_name}.jpg"
                           else
                             "placeholder.png"
                           end
            %>
            <%= image_tag image_path, class: "card-img-top", alt: c.name, style: "height: 150px; object-fit: cover;" %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to c.name, character_path(c) %></h5>
              <p class="card-text"><%= c.role %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center">No characters found.</p>
    <% end %>
  </div>
</div>
