<h1>Quotes</h1>

<% if @quotes.present? %>
  <div class="list-group">
    <% @quotes.each do |q| %>
      <div class="list-group-item">
        <p>"<%= q.text %>"</p>
        <small>
          â€” <%= link_to q.character.name, character_path(q.character) %>
          in <%= link_to q.episode.title, episode_path(q.episode) %>
        </small>
      </div>
    <% end %>
  </div>

  <!-- Pagination Links -->
  <div class="d-flex justify-content-center mt-3">
    <%= paginate @quotes %>
  </div>

<% else %>
  <p>No quotes found.</p>
<% end %>
