<h1><%= @episode.title %></h1>
<p><strong>Season:</strong> <%= @episode.season %> – <strong>Episode:</strong> <%= @episode.episode_number %></p>
<p><%= @episode.description %></p>

<hr>

<h2>Characters in this Episode</h2>
<div class="d-flex flex-wrap gap-3">
  <% @characters.each do |c| %>
    <div class="border p-2 text-center" style="width: 150px;">
      <%= image_tag c.image_path, width: 100, alt: c.name %>
      <p><%= link_to c.name, character_path(c) %></p>
    </div>
  <% end %>
</div>

<hr>

<h2>Quotes from This Episode</h2>
<% @quotes.each do |q| %>
  <p>"<%= q.text %>" – <%= q.character&.name || "Unknown Character" %></p>
<% end %>

<p><%= link_to "Back to Episodes", episodes_path, class: "btn btn-secondary mt-3" %></p>
